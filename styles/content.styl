.content-wrapper
    font-family 'Open Sans', sans-serif
    .title
      h1
        font-size 32px
        font-weight 800
  .content
    font-size 18px
    line-height 24px
    ul
      font-weight 200

.travel-destination
  height 460px
  overflow hidden
  ul
    text-align right
    list-style none
    font-size 1.2em
    li
      a
        color #000
      &:visited
        color #000

.tours
  margin-bottom 40px
  .tours-title
  .tour
    position relative
    height 220px
    text-align left
    margin-bottom 20px
    img
      width 220px
      height 220px
    .title
      width 210px
      padding 10px 5px
      left 0
      bottom 0
      position absolute
      font-size 1.2em
      font-style italic
      background-color rgba(255, 255, 255, 0.7)
      .price
        font-style normal
        font-weight bold
      span
        display block
    &:hover
      .title
        background-color rgba(255, 255, 255, 0.8)

.cards
  margin-bottom 40px
  ul
    list-style none
    text-align center
    li
      display inline-block
      padding 10px 10px
      margin-left 0px
      line-height 60px

.partners
  margin-bottom 40px
  ul
    list-style none
    text-align center
    li
      line-height 45px
      display inline