body
  font-family Georgia, "Times New Roman", Times, serif

.header
  height 220px
  margin-bottom 20px
  background #4EACE0
  background-repeat no-repeat
  background-position bottom right
  background-image url(/images/giraffe-left-200.png)
  background-image url(/images/giraffe-left-200.png), linear-gradient(to top, #1F80C9, #4EACE0)
  background-image url(/images/giraffe-left-200.png), -webkit-gradient(linear, bottom, top, from(#1F80C9), to(#4EACE0))
  background-image url(/images/giraffe-left-200.png), -webkit-linear-gradient(top, #1F80C9, #4EACE0)
  background-image url(/images/giraffe-left-200.png),    -moz-linear-gradient(top, #1F80C9, #4EACE0)
  background-image url(/images/giraffe-left-200.png),     -ms-linear-gradient(top, #1F80C9, #4EACE0)
  background-image url(/images/giraffe-left-200.png),      -o-linear-gradient(top, #1F80C9, #4EACE0)
  background-image url(/images/giraffe-left-200.png),         linear-gradient(to top, #1F80C9, #4EACE0)
  .logo
    text-align center
    line-height 220px
  .title
    cursor pointer
    font-family 'Ubuntu', sans-serif
    h1
      color #FD8736
      font-size 4em
      line-height 220px
  .slogan
    color #fff
    font-size 4em
    text-align right
    font-family 'Lobster', cursive;
  .contacts
    color #fff
    margin 1em
    text-align right
    .phone
      white-space nowrap
      font-size 1.8em
      line-height 1.4em
    .callback
      cursor pointer
      display inline-block
      border-bottom 1px dashed #fff
      &:hover
        color #FD8736
        border-bottom 1px solid #FD8736

.main-menu
  font-size 1.4em
  ul
    li
      font-style italic
      cursor pointer
      display inline
      white-space nowrap
      margin-left 0
      margin-right 1em
      border-bottom 1px dashed #999
      a
        text-decoration none
        &:link
          color #111
        &:visited
          color #111
      &.active
        a
          color #FD8736
          border-bottom 1px solid #FD8736
      &:hover
        a
          color #FD8736
          border-bottom 1px solid #FD8736

.left-menu
  ul
    list-style none
    font-size 1.4em
    li
      margin-left 0
      font-size 1em
      line-height 1.2em
      font-style italic
      margin-bottom 2em
      a
        color #000
        &:hover
          color #FD8736

.content
  font-size 1.4em

#slider
  height 300px

.slider-container
  position relative
  margin-bottom 40px
  img
    width auto
    max-width 100%
  .slide-button
    margin 0
    padding 0
    float left
    width 100px
    height 100px
    cursor pointer
    display inline-block
    img
      width 100px
      height 100px
      opacity 0.6
      &:hover
        opacity 1
  .slider-button
    position absolute
    top 150px
    color #000
    z-index 10
    font-size 2em
    line-height 40px
    text-align center
    text-decoration none
    background-color rgba(255, 255, 255, 0.5)
    &:hover
      background-color rgba(255, 255, 255, 0.8)
    &:visited
      color #000
    &.slider-prev
      left 0
    &.slider-next
      right 0

.travel-destination
  height 460px
  overflow hidden
  ul
    text-align right
    list-style none
    font-size 1.2em
    li
      a
        color #000
      &:visited
        color #000

.tours
  margin-bottom 40px
  .tours-title
  .tour
    position relative
    height 220px
    text-align left
    margin-bottom 20px
    img
      width 220px
      height 220px
    .title
      width 210px
      padding 10px 5px
      left 0
      bottom 0
      position absolute
      font-size 1.2em
      font-style italic
      background-color rgba(255, 255, 255, 0.7)
      .price
        font-style normal
        font-weight bold
      span
        display block
    &:hover
      .title
        background-color rgba(255, 255, 255, 0.8)

#map
  position relative

.cards
  margin-bottom 40px
  ul
    list-style none
    text-align center
    li
      display inline

.partners
  margin-bottom 40px
  ul
    list-style none
    text-align center
    li
      line-height 45px
      display inline

#footer
  height 220px
  background #0075BC
  background-repeat no-repeat
  background-position bottom left
  background-image url(/images/giraffe-200.png)
  background-image url(/images/giraffe-200.png), linear-gradient(to top, #04427F, #0075BC)
  background-image url(/images/giraffe-200.png), -webkit-gradient(linear, bottom, top, from(#04427F), to(#0075BC))
  background-image url(/images/giraffe-200.png), -webkit-linear-gradient(top, #04427F, #0075BC)
  background-image url(/images/giraffe-200.png),    -moz-linear-gradient(top, #04427F, #0075BC)
  background-image url(/images/giraffe-200.png),     -ms-linear-gradient(top, #04427F, #0075BC)
  background-image url(/images/giraffe-200.png),      -o-linear-gradient(top, #04427F, #0075BC)
  background-image url(/images/giraffe-200.png),         linear-gradient(to top, #04427F, #0075BC)

.leaflet-container.dark .map-tooltip .close, 
.leaflet-control-layers-toggle, .leaflet-control-zoom-in, 
.leaflet-control-zoom-out, .leaflet-popup-close-button, .map-tooltip .close, .mapbox-icon
  background-image url(/images/icons-000000.png)

.stroke
  fill none
  stroke #000
  stroke-width 3px

.fill
  fill #fff

.graticule
  fill none
  stroke #777
  stroke-width .5px
  stroke-opacity .5

.land
  fill #222

.boundary
  fill none
  stroke #fff
  stroke-width .5px