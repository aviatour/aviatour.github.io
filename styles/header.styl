.header
  width 100%
  height 220px
  margin-bottom 20px
  background linear-gradient(bottom, #1F80C9, #4EACE0)

  .header-outer
    background url(/images/giraffe-left-200.png) no-repeat bottom right

  .logo
    text-align center
    line-height 220px
  .title
    cursor pointer
    font-family 'Ubuntu', sans-serif
    h1
      color #FD8736
      font-size 4em
      line-height 220px
  .slogan
    color #fff
    font-size 4em
    text-align right
    font-family 'Lobster', cursive;
  .contacts
    color #fff
    margin 1em
    text-align right
    .phone
      white-space nowrap
      font-size 1.8em
      line-height 1.4em
    .callback
      cursor pointer
      display inline-block
      border-bottom 1px dashed #fff
      &:hover
        color #FD8736
        border-bottom 1px solid #FD8736